<main id="main" class="main">

    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

        <link rel="stylesheet" type="text/css"
            href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">
        <link rel="stylesheet" type="text/css"
            href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables_themeroller.css">


    </head>
    <section>


        <table class="table" id="table">
            <thead>
                <tr>


                    <th scope="col">SI NO</th>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">Payment Method</th>
                    <th scope="col">Price</th>
                    <th scope="col">Payment Status</th>

                    <th></th>
                </tr>

            </thead>


            {{#each orders}}

            <tbody>
                <tr>
                    <td></td>

                    <td>{{this.deleveryDetails.firstname}}</td>
                    <td>{{this.deleveryDetails.address.streetname}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td><span>₹</span>&nbsp;{{this.totalAmount}}</td>
                    <td>{{this.status}}</td>

                    <td class="action-col">
                        <a href="/admin/AdminOrderDetails/{{this._id}}" class="btn btn-block btn-outline-primary-2"><i
                                class=" btn btn-primary ">view More </i></a>
                    </td>

            </tbody>
            {{/each}}

        </table>


    </section>

</main>
