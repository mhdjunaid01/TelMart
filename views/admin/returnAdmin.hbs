  src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>


<script>

 $('table').dataTable( {
  paginate: false,
  scrollY: 300
} );

function returnApproved(orderId,ProductId){
  $.ajax({
      url: '/admin/changeOrderStatus',
      data: {
        status: 'return-Approved',
        orderId: orderId,
        ProductId: ProductId
  },
   method: 'post',
      success: () => {
        location.reload()
      }
  
})
}
</script>

