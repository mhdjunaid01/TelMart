<main id="main" class="main">

  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css"
      href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css"
      href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables_themeroller.css">


  </head>
  <section>
    <div class="container ms-auto">
      <div class="row m-4 d-flex justify-content-end">
        <a href="/admin/addcategory" style="width:auto" class="btn btn-success mt-1">Add Category</a>
      </div>
      <div>


        <table class="table" id="table">
          <thead>
            <tr class="text-center bg-secondary">



              <th scope="col">Cetagory</th>

              <th scope="col">Image</th>
              <th scope="col">Option</th>


            </tr>
          </thead>
          <tbody>
            {{#each category}}
            <tr class="text-center">

              <td>{{this.category}}</td>
              <td>
                <img src="/images/product/{{this.img.[0]}}" style="height: 80px; width: 60px;" alt="">
              </td>
              <td> <a href="/admin/categoryDelete/{{this._id}}" class="btn btn-danger"
                  onclick=" return confirm('Are sure to delete{{this.categoty}}')">Delete</a></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </section>

</main>
